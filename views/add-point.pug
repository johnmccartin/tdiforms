extends layout

block content
	h1 Add Point

	form.pure-form.pure-form-stacked
		fieldset
			.question
				label(for="feature_name").control-label Add point name
				input(type="text" name="feature_name").pure-input-1.feature-name-input

			.form-section
				h3.section-heading Location

				.question
						fieldset(data-conditional-on="is_addressy" data-conditional-value="on").pure-group.address-inputs.conditional-on
							label(for="street_number") Address Number
							input(type="text" name="street_number").pure-input-1

							label(for="street_name") Street Name (no suffix)
							input(type="text" name="street_name").pure-input-1

							label(for="street_suffix") Street Suffix
							input(type="text" name="street_suffix").pure-input-1.last-of-section
				
				.section-questions
					.question
						label.control-label Is this point locatable at a single address or small range of addresses?
						.switch
							input(type="checkbox" id="is_addressy" name="is_addressy" checked).creates-conditional
							label(for="is_addressy").toggle.round
					
					
					
						fieldset(data-conditional-on="is_addressy" data-conditional-value="off").pure-group.non-address-inputs.conditional-on
							label(for="non_address_location") Describe the location (street intersection, etc.)
							input(type="text" name="non_address_location").pure-input-1.last-of-section

			
			.form-section
				h3.section-heading Attributes

				.section-questions
					.question
						label(for="feature_type") Select the feature type
							span.annotation This test doesn't include all Feature types.
						select(name="feature_type").creates-conditional
							option(selected disabled) Choose a Feature Type
							option(value="food") Food
							option(value="business") Business

					.question
						

						fieldset(data-conditional-on="feature_type" data-conditional-value="food").pure-group.food-subtypes.conditional-on
							label Select the feature sub-type
							select
								option -
								option Restaurant
								option Cafe
								option Grocer
								option Fast-food

						fieldset(data-conditional-on="feature_type" data-conditional-value="business").pure-group.business-subtypes.conditional-on
							label Select the feature sub-type
							select
								option -
								option General Office
								option General Industrial
								option Bank
								option Corporate Headquarters
								option Co-working


					.question
						label(for="open_close_status") Add an open or close date as needed.
						.status-date-group
							table(data-statuses="open-close" id="open_close_status")
								tr.status-date-row
									td
										span.status-date.status-date-existing Example status
									td
										span 2017-01
									td
										a(href='#').status-date-remove X
								tr 
								tr.status-date-add-row
									td
										span.status-date.status-date-add-new Add a new status
									td
									td
										a(href='#').status-date-add +



					.question
						label Is this feature an employer?
						.switch
							input(type="checkbox" name="is_employer" id="is_employer")
							label(for="is_employer").toggle.round

					.question
						label Does this feature activate the street nearby?
						.switch
							input(type="checkbox" id="is_street_activating" name="is_street_activating")
							label(for="is_street_activating").toggle.round

					.question
						label Does this feature contribute to the goals of the TDI program?
						.switch
							input(type="checkbox" name="is_tdi_assett" id="is_tdi_assett")
							label(for="is_tdi_assett").toggle.round

					.question
						label Is the owner of this feature engaged with the TDI program or other community activities?
						.status-date-group
							table(data-statuses="boolean" id="is_feature_owner_engaged")
								tr.status-date-row
									td
										span.status-date.status-date-existing Example status
									td
										span 2017-01
									td
										a(href='#').status-date-remove X
								tr 
								tr.status-date-add-row
									td
										span.status-date.status-date-add-new Add a new status
									td
									td
										a(href='#').status-date-add +

					.question
						label Is this feature a collision point for members of the community?
						.switch
							input(type="checkbox" name="is_collision_point" id="is_collision_point")
							label(for="is_collision_point").toggle.round
			
			



			.form-section
				h3.section-heading Documents and Links
				.section-questions
					.question
						label(for="featured_photo") Add an illustrative photo of this feature
						input(type="file" name="featured_photo")

					.question
						label(for="pub_docs") Add any related documents. These are publicly visible.
						input(type="file" name="pub_docs" multiple)

					.question
						label(for="priv_docs") Add any related documents. These are not publicly visible.
						input(type="file" name="priv_docs" multiple)

					.quesiton
						label(for="related_link_url") Enter the URL for any related website.
						input(type="text" name="related_link_url").pure-input-1

					.quesiton
						label(for="related_link_title") Enter a label for this related website.
						input(type="text" name="related_link_title").pure-input-1


			.form-section
				h3.section-heading Related Features and Investments
				
				.section-questions
					.question
						span.annotation This will be type-ahead forms like in Matt's mockup
						label Search for and select any features related to this feature.
						input(type="text").pure-input-1

					.question
						span.annotation This will be type-ahead forms like in Matt's mockup
						label Search for and select any investments related to this feature.
						input(type="text").pure-input-1

					.question
						label Explain how these features and/or investments are related to this feature.
						textarea.pure-input-1


			.form-section
				h3.section-heading Contacts

				.section-questions
					fieldset.contact.priv-contact
						.question.initial
							label Private Contact Name
							input(type="text").pure-input-1

						.question
							label Private Contact Organziation
							input(type="text").pure-input-1

						.question
							label Private Contact Role
							input(type="text").pure-input-1

						.question
							label Private Contact Phone Number
							input(type="tel").pure-input-1

						.question
							label Private Contact Email
							input(type="email").pure-input-1

						.question
							label Private Contact Website
							input(type="text").pure-input-1

					fieldset.contact.public-contact-1
						.question.initial
							label Public Contact 1 Name
							input(type="text").pure-input-1

						.question
							label Public Contact 1 Organziation
							input(type="text").pure-input-1

						.question
							label Public Contact 1 Role
							input(type="text").pure-input-1

						.question
							label Public Contact 1 Phone Number
							input(type="tel").pure-input-1

						.question
							label Public Contact 1 Email
							input(type="email").pure-input-1

						.question
							label Public Contact 1 Website
							input(type="text").pure-input-1

					fieldset.contact.public-contact-2
						.question.initial
							label Public Contact 2 Name
							input(type="text").pure-input-1

						.question
							label Public Contact 2 Organziation
							input(type="text").pure-input-1

						.question
							label Public Contact 2 Role
							input(type="text").pure-input-1

						.question
							label Public Contact 2 Phone Number
							input(type="tel").pure-input-1

						.question
							label Public Contact 2 Email
							input(type="email").pure-input-1

						.question
							label Public Contact 2 Website
							input(type="text").pure-input-1

			.form-section
				h3.section-heading Call to Action

				.section-questions
					.question
						label Write new Call to Action text if you wish to override the default text for this feature.
						input(type="text").pure-input-1

					.question
						label Select the contact revealed when a user clicks this feature's Call to Action button.
						select
							option(selected) District Contact
							option Public Contact 1
							option Public Contact 2
			.form-section
				h3.section-heading Notes

				.section-questions
					.question
						label Other notes (publicly visible).
						textarea.pure-input-1

					.question
						label Other notes (not publicly visible).
						textarea.pure-input-1

		button(type="submit").pure-button.pure-button-primary Save


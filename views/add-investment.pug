extends layout

block content
	h1 Add Investment

	form.pure-form.pure-form-stacked
		fieldset
			.question
				label(for="feature_name").control-label Add project name.
				input(type="text" name="feature_name").pure-input-1.feature-name-input

			.form-section
				h3.section-heading Location
				
				.section-questions
					.question
						label.control-label Is this feature locatable at a single address or small range of addresses?
						.switch
							input(type="checkbox" id="is_addressy" name="is_addressy" checked).creates-conditional
							label(for="is_addressy").toggle.round
					
					.question
						fieldset(data-conditional-on="is_addressy" data-conditional-value="on").pure-group.address-inputs.conditional-on
							label(for="street_number") Address Number
							input(type="text" name="street_number").pure-input-1

							label(for="street_name") Street Name (no suffix)
							input(type="text" name="street_name").pure-input-1

							label(for="street_suffix") Street Suffix
							input(type="text" name="street_suffix").pure-input-1.last-of-section
					
						fieldset(data-conditional-on="is_addressy" data-conditional-value="off").pure-group.non-address-inputs.conditional-on
							label(for="non_address_location") Describe the location (street intersection, etc.)
							input(type="text" name="non_address_location").pure-input-1.last-of-section

			
			.form-section
				h3.section-heading Attributes

		

				.section-questions

					.question
						label(for="investment_status") Add an open or close date as needed.
						.status-date-group
							table(data-statuses="investment-statuses" id="investment_status")
								tr.status-date-row
									td
										span.status-date.status-date-existing Example status
									td
										span 2016-04
									td
										a(href='#').status-date-remove X
								tr 
								tr.status-date-add-row
									td
										span.status-date.status-date-add-new Add a new status
									td
									td
										a(href='#').status-date-add +

					.question
							label(for="investment_type") Which type of investment is this?
							select(name="investment_type")
								option(selected disabled) Choose an Investment Type
								option(value="Infrastructure") Infrastructure
								option(value="Finance") Finance
								option(value="Assitance") Assitance
								option(value="Placemaking") Placemaking


					.question
						label(for="source_type") Select the source of funding for this project.
						select(name="source_type").creates-conditional
							option(selected disabled) Choose a Source Type
							option(value="MassDevelopment") MassDevelopment
							option(value="Public") Public
							option(value="Private") Private

					.question
						fieldset(data-conditional-on="source_type" data-conditional-value="MassDevelopment").pure-group.address-inputs.conditional-on
							p.annotation This will be type-ahead form
							label(for="massdev_product") Product Name (MassDevelopment)
							input(type="text" name="massdev_product").pure-input-1

						fieldset(data-conditional-on="source_type" data-conditional-value="Public").pure-group.address-inputs.conditional-on
							p.annotation This will be type-ahead form
							label(for="public_product") Product Name (Public)
							input(type="text" name="public_product").pure-input-1

						fieldset(data-conditional-on="source_type" data-conditional-value="Private").pure-group.address-inputs.conditional-on
							label(for="public_product") Product Name (Private)
							input(type="text" name="public_product").pure-input-1

					.question
						label Is this investment influenced by the TDI program?
						.switch
							input(type="checkbox" name="is_tdi_influenced" id="is_tdi_influenced")
							label(for="is_tdi_influenced").toggle.round

					.question
						label Is the investment amount known or can it be estimated?
						.switch
							input(type="checkbox" name="is_amount_known" id="is_amount_known")
							label(for="is_amount_known").toggle.round

					.question
						label Is this investment amount estimated?
						.switch
							input(type="checkbox" name="is_amount_estimated" id="is_amount_estimated").creates-conditional
							label(for="is_amount_estimated").toggle.round

					.question.conditional-on(data-conditional-on="is_amount_estimated" data-conditional-value="off")
						label Enter the exact investment amount.
						input(name="exact_amount" type="number").pure-input-1

					.question.conditional-on(data-conditional-on="is_amount_estimated" data-conditional-value="on")
						label Enter an estimated investment amount (numbers only).
						input(name="estimated" type="text").pure-input-1

					.question
						label Can the investment amount be publicly shared?
						.switch
							input(type="checkbox" name="is_amount_public" id="is_amount_public")
							label(for="is_amount_public").toggle.round



			.form-section
				h3.section-heading Documents and Links
				.section-questions
					.question
						label(for="featured_photo") Add an illustrative photo of this investment
						input(type="file" name="featured_photo")

					.question
						label(for="pub_docs") Add any related documents. These are publicly visible.
						input(type="file" name="pub_docs" multiple)

					.question
						label(for="priv_docs") Add any related documents. These are not publicly visible.
						input(type="file" name="priv_docs" multiple)

					.quesiton
						label(for="related_link_url") Enter the URL for any related website.
						input(type="text" name="related_link_url").pure-input-1

					.quesiton
						label(for="related_link_title") Enter a label for this related website.
						input(type="text" name="related_link_title").pure-input-1


			.form-section
				h3.section-heading Related Features and Investments
				
				.section-questions
					.question
						span.annotation This will be type-ahead form like in Matt's mockup
						label Search for and select any features related to this investment.
						input(type="text").pure-input-1

					.question
						span.annotation This will be type-ahead form like in Matt's mockup
						label Search for and select any investments related to this investment.
						input(type="text").pure-input-1

					.question
						label Explain how these features and/or investments are related to this feature.
						textarea.pure-input-1


			.form-section
				h3.section-heading Contacts

				.section-questions
					fieldset.contact.priv-contact
						.question.initial
							label Private Contact Name
							input(type="text").pure-input-1

						.question
							label Private Contact Organziation
							input(type="text").pure-input-1

						.question
							label Private Contact Role
							input(type="text").pure-input-1

						.question
							label Private Contact Phone Number
							input(type="tel").pure-input-1

						.question
							label Private Contact Email
							input(type="email").pure-input-1

						.question
							label Private Contact Website
							input(type="text").pure-input-1

					fieldset.contact.public-contact-1
						.question.initial
							label Public Contact 1 Name
							input(type="text").pure-input-1

						.question
							label Public Contact 1 Organziation
							input(type="text").pure-input-1

						.question
							label Public Contact 1 Role
							input(type="text").pure-input-1

						.question
							label Public Contact 1 Phone Number
							input(type="tel").pure-input-1

						.question
							label Public Contact 1 Email
							input(type="email").pure-input-1

						.question
							label Public Contact 1 Website
							input(type="text").pure-input-1

					fieldset.contact.public-contact-2
						.question.initial
							label Public Contact 2 Name
							input(type="text").pure-input-1

						.question
							label Public Contact 2 Organziation
							input(type="text").pure-input-1

						.question
							label Public Contact 2 Role
							input(type="text").pure-input-1

						.question
							label Public Contact 2 Phone Number
							input(type="tel").pure-input-1

						.question
							label Public Contact 2 Email
							input(type="email").pure-input-1

						.question
							label Public Contact 2 Website
							input(type="text").pure-input-1

			.form-section
				h3.section-heading Call to Action

				.section-questions
					.question
						label Write new Call to Action text if you wish to override the default text for this investment.
						input(type="text").pure-input-1

					.question
						label Select the contact revealed when a user clicks this investment's Call to Action button.
						select
							option(selected) District Contact
							option Public Contact 1
							option Public Contact 2
			.form-section
				h3.section-heading Notes

				.section-questions
					.question
						label Other notes (publicly visible).
						textarea.pure-input-1

					.question
						label Other notes (not publicly visible).
						textarea.pure-input-1

		button(type="submit").pure-button.pure-button-primary Save

